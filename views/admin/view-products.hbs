<section>
    <div class="container">
            <div>
                <a href="/admin/add-product" class="btn btn-success mt-4" style="float:right">Add Product</a>
            </div>
        <table class="table mt-5">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Offer</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <th scope="row">1</th>
            <td>{{this.Name}}</td>
            <td>{{this.Price}}</td>
            <td>{{this.Offer}}</td>
            <td><img style="width:70px;height:70px;"src="/product-images/{{this._id}}.jpg" alt=""></td>
            <td>
                <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you really want to delete?')">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
    </div>
</section>